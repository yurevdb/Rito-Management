<Page x:Class="ServerControl.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServerControl"
      xmlns:core="clr-namespace:ServerControl.Core;assembly=RitoManager.Core"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="WelcomePage">

    <Border Background="White" Padding="50 30 30 30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Welcome Text-->
            <TextBlock Margin="20 0 0 0" FontSize="70" Text="Welcome"/>
            
            
        </Grid>
    </Border>
    
</Page>
