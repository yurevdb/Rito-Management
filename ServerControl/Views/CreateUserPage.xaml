<local:BasePage x:TypeArguments="core:CreateUserViewModel" 
                x:Class="ServerControl.CreateUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServerControl"
      xmlns:core="clr-namespace:ServerControl.Core;assembly=RitoManager.Core"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CreateUserPage">

    <StackPanel Background="Transparent" Margin="20">
        
        <TextBox Text="{Binding Name}" Height="50" Margin="0 0 0 10"/>
        <TextBox Text="{Binding Sirname}" Height="50" Margin="0 0 0 10"/>
        <Button Content="Save" Command="{Binding Createuser}" Margin="0 0 0 10"/>
        
    </StackPanel>
    
</local:BasePage>
