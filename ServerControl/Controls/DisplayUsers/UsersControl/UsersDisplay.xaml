<UserControl x:Class="ServerControl.UsersDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServerControl"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <!-- User List -->
            <ColumnDefinition Width="*" MaxWidth="400"/>
            <!-- User Info -->
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Search box-->
            <Border Grid.Row="0"
                    Background="AliceBlue" 
                    Height="80" 
                    Padding="10"
                    Margin="0 0 0 10"
                    >

                <TextBox />
            </Border>

            <!-- List with all the users -->
            <local:UserListControl Grid.Row="1" Margin="0 10 0 0" />
        </Grid>

        <local:UserInfoControl Grid.Column="1" Margin="20 0 0 0"/>

    </Grid>
</UserControl>
